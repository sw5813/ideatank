<div class="navbar-wrapper">  
  <div class="container">
    <header class="navbar navbar-inverse transparent navbar-static-top">
      <div class="container">
        <div class="navbar-inner">
          <div class="container">
            <%= link_to "tank logo", root_path, id: "logo" %>
            <nav>
              <ul class="nav pull-right white">
                <li><%= link_to "Our Vision", vision_path, {class: "white"} %></li>
                <li><%= link_to "Our Moderators", moderators_path, {class: "white"} %></li>
                <li><%= link_to "Forums", forums_path, {class: "white"} %></li>
                <% if signed_in? %>
                  <% if current_user.admin? %>
                    <li><%= link_to "Users", users_path, {class: "white"} %></li>
                  <% end %>
                  <li id="fat-menu" class="dropdown">
                    <a href="#" class="dropdown-toggle white" data-toggle="dropdown">
                      Account <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                      <li><%= link_to "Profile", current_user %></li>
                      <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                      <li class="divider"></li>
                      <li>
                        <%= link_to "Sign out", signout_path, method: "delete" %> 
                      </li>
                    </ul>
                  </li>
                <% else %>
                  <li><%= link_to "Sign in", signin_path, {class: "white"} %></li>
                <% end %>
              </ul>
            </nav>
          </div>
        </div>
      </div>
    </header>
  </div>
</div>
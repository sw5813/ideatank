<p class="lead">There are currently <strong><%= @microposts.pending.count %></strong> posts pending review</p>

<p>NB: need to fix for individuals some time. darn turbolinks</p>

<ul>
<% @forums.each do |forum| %>
	<li class="forum"><h3><%= forum.name %> (click to reveal topics!)</h3></li>
	<% forum.topics.each do |topic| %>
		<% if topic.microposts.pending.any? %>
			<ul class="topic">
				<li><%= link_to topic.problem, topic %> (<%= topic.microposts.pending.count %>)</li>
			</ul>
		<% end %>
	<% end %>
<% end %>


	

